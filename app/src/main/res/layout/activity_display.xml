<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.com.midterm.DisplayActivity">

    <RelativeLayout
        android:id="@+id/relLayouDisp"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <FrameLayout
            android:id="@+id/fLayout"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="87dp"
            android:layout_marginStart="87dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/border">

            <ImageView
                android:id="@+id/imageViewTrack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <TextView
            android:id="@+id/textViewDTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fLayout"
            android:layout_marginTop="38dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/textViewDgenre"
            android:layout_alignStart="@+id/textViewDgenre"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/textViewDgenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/textViewDTitle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/textViewDArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDgenre"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/textViewDAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDArtist"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/textViewDTrackPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDAlbum"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/textViewDAlbumPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDTrackPrice"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"/>

        <Button
            android:id="@+id/buttonFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="23dp"
            android:text="@string/finish" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
